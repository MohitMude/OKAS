<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:backgroundTintMode="add"
    android:background="@color/colorTint">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:background="#6200ee"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:text="@string/login"
        android:textSize="30sp"
        />

    <com.google.androimaterial.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:hintAnimationEnabled="true"
        android:layout_margin="15dp"
        android:layout_marginTop="50dp"
        android:hint="@string/ENTER_EMAIL"
        app:boxCornerRadiusBottomEnd="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Edtext_loginemail"/>
    </com.google.androimaterial.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_password"

        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        app:boxCornerRadiusBottomEnd="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Edtext_loginpassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="@color/colorBox"
        android:id="@+id/Btn_Signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/Text_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOT HAVE AN ACCOUNT ? SIGN IN HERE>"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"/>




</LinearLayout>