<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RoomActivity"
    tools:showIn="@layout/app_bar_room"
    android:id="@+id/fragment_container"
    >

    <TextView
        android:id="@+id/txtview_your_room"
        android:layout_width="159dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="87dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/your_room"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/txtview_room_no"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_your_room"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="130dp"

        android:layout_marginLeft="130dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="0dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtview_current_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="267dp"
        android:background="@color/colorPrimary"
        android:text="@string/current_status"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtview_status"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="127dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_refresh" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_change_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="408dp"
        android:text="@string/change_status"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Btn_open_another_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_change_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-109dp"
        android:text="@string/open_another_room"
        android:textSize="18sp" />

</RelativeLayout>